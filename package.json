{
  "name": "timelapse",
  "version": "0.0.1",
  "description": "App for taking timelapse videos via your desktop camera.",
  "repository": "https://github.com/michaelwschultz/timelapse-app",
  "license": "MIT",
  "main": "src/electron.js",
  "scripts": {
    "build": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/temp_icon.icns --prune=true --out=release_builds",
    "dev": "concurrently 'cross-env BROWSER=none yarn react-start' 'wait-on http://localhost:3000 && electron .'",
    "electron-start": "electron .",
    "lint": "eslint",
    "nocam": "yarn dev --nocam",
    "react-build": "parcel build index.html",
    "react-start": "parcel -p 3000 index.html"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "ffbinaries": "^1.1.4",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "videoshow": "github:michaelwschultz/videoshow",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "electron-packager": "^14.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "parcel-bundler": "^1.12.4",
    "wait-on": "^4.0.2"
  }
}
